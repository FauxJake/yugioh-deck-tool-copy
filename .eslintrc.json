{
    "extends": [
        "plugin:vue/recommended"
    ],
    "plugins": [
        "vue"
    ],
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 8
    },
    "rules": {
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "double"],
        "semi": ["error", "always"],
        "no-console": "warn",
        "comma-dangle": "warn",
        "indent": ["warn", 2],
        "vue/html-indent": ["warn", 4]
    }
}
