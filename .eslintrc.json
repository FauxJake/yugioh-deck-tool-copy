{
    "extends": ["plugin:vue/recommended"],
    "plugins": ["vue"],
    "env": {
        "es6": true,
        "node": true,
        "browser": true
    },
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 8
    },
    "rules": {
        "linebreak-style": ["error", "unix"],
        "quotes": ["error", "double"],
        "semi": ["error", "always"],
        "comma-dangle": "error",
        "no-console": "warn",
        "indent": ["warn", 4],
        "vue/html-indent": ["warn", 4],
        "vue/valid-v-bind": "off"
    }
}
