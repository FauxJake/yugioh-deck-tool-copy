{
    "compilerOptions": {
        "moduleResolution": "node",
        "rootDir": "./",
        "baseUrl": "./",
        "target": "esnext",
        "newLine": "LF",
        "strict": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "importHelpers": true,
        "esModuleInterop": true
    },
    "include": [],
    "exclude": [
        "node_modules"
    ],
    "references": [
        {
            "path": "./src/tsconfig.json"
        },
        {
            "path": "./spec/src/tsconfig.json"
        }
    ]
}
