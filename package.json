{
    "name": "ygoprodeckprice",
    "version": "v3.8.1",
    "description": "ygodeckprice app for ygoprodeck.com",
    "main": "app/js/app.js",
    "constants": {
        "dirBase": {
            "input": "./src",
            "output": "./app"
        },
        "js": {
            "input": "js/app",
            "namespace": {
                "module": "ygodeckprice",
                "file": "js/app"
            },
            "targets": {
                "browsers": "chrome >= 58"
            }
        },
        "css": {
            "input": "scss/app",
            "output": "css/app"
        },
        "html": {
            "input": "index",
            "output": "index"
        }
    },
    "scripts": {
        "start": "npm-run-all lint build",
        "build": "npm-run-all --parallel html:dev css:dev js:dev",
        "dist": "npm-run-all --parallel html:dist css:dist js:dist",
        "html:dev": "node tasks/htmlDev",
        "html:dist": "node tasks/htmlDist",
        "css:dev": "node tasks/cssDev",
        "css:dist": "node tasks/cssDist",
        "js:dev": "node tasks/jsDev",
        "js:dist": "node tasks/jsDist",
        "lint": "eslint src/"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/FelixRilling/ygodeckprice3.git"
    },
    "keywords": [
        "yugioh",
        "deck",
        "app"
    ],
    "author": "FelixRilling",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/FelixRilling/ygodeckprice3/issues"
    },
    "homepage": "https://github.com/FelixRilling/ygodeckprice3#readme",
    "dependencies": {
        "bootstrap": "^4.0.0-beta",
        "clipboard-js": "^0.3.5",
        "file-saver": "^1.3.3",
        "vue": "^2.5.2"
    },
    "devDependencies": {
        "babel-core": "^7.0.0-beta.2",
        "babel-plugin-external-helpers": "^7.0.0-beta.2",
        "babel-preset-env": "^1.6.0",
        "eslint-plugin-unicorn": "^2.1.2",
        "eslint": "^4.7.0",
        "node-sass": "^4.5.3",
        "npm-run-all": "^4.1.1",
        "pretty": "^2.0.0",
        "pug": "^2.0.0-rc.4",
        "rollup-plugin-babel": "^3.0.2",
        "rollup-plugin-commonjs": "^8.2.1",
        "rollup-plugin-node-resolve": "^3.0.0",
        "rollup-plugin-replace": "^2.0.0",
        "rollup-plugin-uglify-es": "0.0.1",
        "rollup": "^0.50.0",
        "uglify-es": "^3.1.3"
    }
}
