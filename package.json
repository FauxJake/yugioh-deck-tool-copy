{
    "name": "yugioh-deck-tool",
    "version": "v4.12.0",
    "description": "A tool to view deck prices, share and edit decks, create random decks and much more",
    "main": "./dist/app.js",
    "scripts": {
        "dev": "cross-env NODE_ENV=development webpack-dev-server --open --hot",
        "build": "cross-env NODE_ENV=development webpack --progress --hide-modules",
        "dist": "cross-env NODE_ENV=production webpack --progress --hide-modules",
        "lint": "npm-run-all lint:es lint:style",
        "lint:es": "eslint ./src/**/*.{js,vue}",
        "lint:style": "stylelint ./src/**/*.{scss,vue} --cache --cache-location=./.cache/stylelint/",
        "fix": "npm-run-all fix:es fix:style fix:prettier",
        "fix:es": "eslint ./src/**/*.{js,vue} --fix",
        "fix:style": "stylelint ./src/**/*.{scss,vue} --cache --cache-location=./.cache/stylelint/ --fix",
        "fix:prettier": "prettier ./src/**/*  --write"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/FelixRilling/yugioh-deck-tool.git"
    },
    "keywords": [
        "yugioh",
        "deck",
        "app"
    ],
    "author": "FelixRilling",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/FelixRilling/yugioh-deck-tool/issues"
    },
    "homepage": "https://github.com/FelixRilling/yugioh-deck-tool#readme",
    "browserslist": [
        "last 2 Chrome versions",
        "last 2 Firefox versions"
    ],
    "dependencies": {
        "bootstrap": "^4.2.1",
        "bootstrap-vue": "^2.0.0-rc.11",
        "lightdash": "^10.2.1",
        "pako": "^1.0.8",
        "vue": "^2.5.22",
        "vue-multiselect": "^2.1.3"
    },
    "devDependencies": {
        "@babel/core": "^7.2.2",
        "@babel/preset-env": "^7.3.1",
        "babel-loader": "^8.0.5",
        "cross-env": "^5.2.0",
        "css-loader": "^2.1.0",
        "eslint": "^5.13.0",
        "eslint-plugin-vue": "^5.1.0",
        "mini-css-extract-plugin": "^0.5.0",
        "node-sass": "^4.11.0",
        "npm-run-all": "^4.1.5",
        "sass-loader": "^7.1.0",
        "style-loader": "^0.23.1",
        "terser": "~3.14.1",
        "terser-webpack-plugin": "^1.2.1",
        "vue-loader": "^15.6.2",
        "vue-template-compiler": "^2.5.22",
        "webpack": "^4.29.0",
        "webpack-cli": "^3.2.1",
        "webpack-dev-server": "^3.1.14"
    }
}
