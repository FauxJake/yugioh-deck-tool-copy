{
    "extends": "../../tsconfig.json",
    "compilerOptions": {
        "baseUrl": "./",
        "strict": false,
        "allowSyntheticDefaultImports": true,
        "importHelpers": true,
        "esModuleInterop": true,
        "sourceMap": true,
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.vue"
    ],
    "exclude": ["node_modules"]
}
