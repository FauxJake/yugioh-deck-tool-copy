.form-app-group
    .form-app-label
        label Deck:
    .form-app-field-primary
        input.form-control#formUploadDeck(type="file",title="Upload Deck",accept=".ydk",@change="onFileChange")
    .form-app-field-secondary
        input.form-control(type="text",title="Deck Title",placeholder="Deck Title",v-model="deck.name",@input="deckUpdate()")
        a.btn.btn-primary.form-control(title="Download Deck",download,@click="fileDownloadDeck()") Download
.form-app-group
    .form-app-label
        label Share:
    .form-app-field-primary
        input.form-control#formLinkShare(type="url",title="Shareable Link",v-bind:value="uriLocationNoParam() + deck.link")
    .form-app-field-secondary
        a.btn.btn-primary.form-control(title="Copy Decklist to Clipboard",@click="fileDownloadDeck()") Copy Decklist to Clipboard
.form-app-group
    .form-app-label
        label Price:
    .form-app-field-primary
        select.form-control(title="Price Currency",v-model="price.activeCurrency")
            option(v-for="currency in price.currencies",v-bind:value="currency.id") {{currency.name}}
    .form-app-field-secondary
        .btn.btn-primary.form-control(title="Load Prices",@click="apiLoadPrices()")
            span(v-bind:hidden="ajax.currentlyLoading") Load Prices
            span(v-bind:hidden="!ajax.currentlyLoading")
                i.fa.fa-circle-o-notch.fa-spin.fa-fw
