{
    "extends": "../tsconfig.json",
    "compilerOptions": {
        "baseUrl": "./",
        "strict": false,
        "jsx": "preserve",
        "sourceMap": true,
        "types": ["webpack-env"],
        "paths": {
            "@/*": ["src/*"]
        },
        "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx",
        "src/**/*.vue",
        "tests/**/*.ts",
        "tests/**/*.tsx"
    ],
    "exclude": ["node_modules"]
}
